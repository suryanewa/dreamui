{
  "name": "avatar",
  "description": "Avatar component for displaying user or entity images and initials",
  "version": "1.0.0",
  "category": "ui",
  "tags": ["user", "image", "profile"],
  "props": [
    { "name": "size", "type": "string", "values": ["xs", "sm", "md", "lg", "xl"], "default": "md" },
    { "name": "shape", "type": "string", "values": ["circle", "square", "rounded"], "default": "circle" },
    { "name": "src", "type": "string", "description": "Image source URL" },
    { "name": "alt", "type": "string", "description": "Alt text for image" },
    { "name": "initials", "type": "string", "description": "Fallback initials" }
  ],
  "attributes": ["data-size", "data-shape", "src", "alt"],
  "accessibility": { "role": "img", "aria-label": "avatar" },
  "examples": ["image", "initials", "sizes", "shapes"]
}
