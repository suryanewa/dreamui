{
  "name": "drawer",
  "description": "Drawer/Slide-out panel component",
  "version": "1.0.0",
  "category": "ui",
  "tags": ["drawer", "sidebar", "slide-out"],
  "props": [
    { "name": "open", "type": "boolean", "default": false },
    { "name": "position", "type": "string", "values": ["left", "right"], "default": "right" },
